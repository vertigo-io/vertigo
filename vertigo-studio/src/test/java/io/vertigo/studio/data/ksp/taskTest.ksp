package io.vertigo.studio.dao

create Task TK_GET_FIRST_CAR {
    className : "io.vertigo.dynamox.task.TaskEngineSelect"
    request : "
				select * from car
				limit 1
			"
	attribute DTO_CAR {domain : DO_DT_CAR_DTO  notNull:"false" inOut :"out"}
}


/*To test PAO*/
create Task TK_PING {
    className : "io.vertigo.dynamox.task.TaskEngineSelect"
    request : "
				select 1
			"
	attribute RESULT {domain : DO_INTEGER  notNull:"false" inOut :"out"}
}


create Task TK_ONE_PARAM_SELECT {
    className : "io.vertigo.dynamox.task.TaskEngineSelect"
    request : "
				select 1 where 1 = #INPUT#
	
			"
	attribute INPUT {domain : DO_INTEGER  notNull:"true" inOut :"in"}
	attribute RESULT {domain : DO_INTEGER  notNull:"true" inOut :"out"}
}

create Task TK_ONE_LIST_PARAM_SELECT {
    className : "io.vertigo.dynamox.task.TaskEngineSelect"
    request : "
				select 1 where 1 in  (#INPUT.ROWNUM#)
	
			"
	attribute INPUT {domain : DO_INTEGERS  notNull:"true" inOut :"in"}
	attribute RESULT {domain : DO_INTEGER  notNull:"true" inOut :"out"}
}


create Task TK_SELECT_CAR_BY_IDS {
    className : "io.vertigo.dynamox.task.TaskEngineSelect"
    request : "
				select * from car where id in (#INPUT.ROWNUM.ID#)
			"
	attribute INPUT {domain : DO_DT_CAR_DTC  notNull:"true" inOut :"in"}		
	attribute DTO_CAR {domain : DO_DT_CAR_DTC  notNull:"true" inOut :"out"}
}