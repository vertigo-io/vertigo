		<replaceregexp encoding="${src.encoding}" flags="gis" byline="false">
			<fileset dir="${src.path}">
				<include name="**/*.java" />
			</fileset>
			<regexp pattern="new WrappedException\((&quot;.+&quot;), e\);" />
			<substitution expression="WrappedException.wrap(e, \1);" />
